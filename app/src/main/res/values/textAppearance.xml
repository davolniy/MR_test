<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base-->
    <style name="TextAppearance" parent="AppTheme"/>

    <!--Common-->
    <style name="TextAppearance.Regular" parent="TextAppearance">
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="TextAppearance.TextView.Title" parent="TextAppearance.Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.TextView.Medium" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TextView.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Button.Accent" parent="TextAppearance.TextView.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Toast.Accent" parent="TextAppearance.TextView.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--AppBar-->
    <style name="TextAppearance.AppBar.Title" parent="TextAppearance.TextView.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Repo-->
    <style name="TextAppearance.Repo.Name" parent="TextAppearance.TextView.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Repo.Owner" parent="TextAppearance.TextView.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Repo.Description" parent="TextAppearance.TextView.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>